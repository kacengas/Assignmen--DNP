@page "/add-user"
@using System.Net.Http
@using System.Net.Http.Json
@using Entities
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Add User</PageTitle>

<h1>Add User</h1>

<div>
    <label>Username</label>
    <input @bind="username" placeholder="Enter username" />
</div>

<div>
    <label>Password</label>
    <input type="password" @bind="password" placeholder="Enter password"/>
</div>

<div>
    <button class="btn btn-primary" @onclick="addUser">Add</button>    
</div>

@code {
    private string username;
    private string password;

    private async Task addUser()
    {
        try
        {
            var user = new User
            {
                Username = username,
                Password = password
            };

            var response = await Http.PostAsJsonAsync("/user", user);

            if (response.IsSuccessStatusCode)
            {
                Console.WriteLine("User added successfully!");
                
                username = string.Empty;
                password = string.Empty;
                
                await JSRuntime.InvokeVoidAsync("alert", "User added successfully!");
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"Error adding user: {response.StatusCode} - {errorContent}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception occurred: {ex.Message}");
        }
    }
}